                    <i class="fas fa-table"></i>
                </div>
                <div class="profile-tab">
                    <i class="far fa-id-badge"></i>
                </div>
                <div class="profile-tab">
                    <i class="far fa-bookmark"></i>
                </div>
            </div>
            
            <div class="profile-posts">
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
                <div class="profile-post"></div>
            </div>
        </div>
    </section>
    
    <!-- Bottom Navigation -->
    <div class="bottom-nav">
        <i class="fas fa-home nav-icon active" data-section="feed"></i>
        <i class="fas fa-search nav-icon" data-section="search"></i>
        <i class="far fa-plus-square nav-icon" data-section="create"></i>
        <i class="far fa-heart nav-icon" data-section="activity">
            <div class="nav-notification"></div>
        </i>
        <i class="far fa-user nav-icon" data-section="profile"></i>
    </div>

    <!-- Modals -->
    <div class="modal" id="post-options-modal">
        <div class="modal-content">
            <div class="modal-option delete">Denunciar</div>
            <div class="modal-option delete">Deixar de seguir</div>
            <div class="modal-option">Copiar link</div>
            <div class="modal-option">Compartilhar em</div>
            <div class="modal-option">Incorporar</div>
            <div class="modal-option cancel">Cancelar</div>
        </div>
    </div>
    
    <div class="modal" id="settings-modal">
        <div class="modal-content settings-modal">
            <div class="modal-header">Configura√ß√µes</div>
            <div class="settings-option">
                <span>Modo Escuro</span>
                <label class="switch">
                    <input type="checkbox" id="dark-mode-toggle">
                    <span class="slider"></span>
                </label>
            </div>
            <div class="settings-option">
                <span>Notifica√ß√µes</span>
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                </label>
            </div>
            <div class="settings-option">
                <span>Conta privada</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider"></span>
                </label>
            </div>
            <div class="modal-option cancel">Fechar</div>
        </div>
    </div>
    
    <!-- Toast -->
    <div class="toast" id="toast"></div>

    <script>
        // Estado da aplica√ß√£o
        let currentSection = 'feed';
        let likedPosts = new Set();
        let savedPosts = new Set();
        let followedUsers = new Set();
        let currentTheme = 'light';
        
        // Elementos DOM
        const body = document.body;
        const navIcons = document.querySelectorAll('.nav-icon');
        const sections = document.querySelectorAll('section');
        const themeToggle = document.getElementById('theme-toggle');
        const darkModeToggle = document.getElementById('dark-mode-toggle');
        const activityIcon = document.getElementById('activity-icon');
        const directIcon = document.getElementById('direct-icon');
        const logo = document.getElementById('logo');
        const toast = document.getElementById('toast');
        const postOptionsModal = document.getElementById('post-options-modal');
        const settingsModal = document.getElementById('settings-modal');
        
        // Inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar tema
            const savedTheme = localStorage.getItem('instagram-theme');
            if (savedTheme) {
                setTheme(savedTheme);
            }
            
            // Configurar double tap para curtir
            document.querySelectorAll('.post-image').forEach(image => {
                let lastTap = 0;
                image.addEventListener('touchend', function(e) {
                    const currentTime = new Date().getTime();
                    const tapLength = currentTime - lastTap;
                    
                    if (tapLength < 500 && tapLength > 0) {
                        handleDoubleTap(this);
                        e.preventDefault();
                    }
                    lastTap = currentTime;
                });
                
                image.addEventListener('dblclick', function() {
                    handleDoubleTap(this);
                });
            });
            
            // Configurar coment√°rios
            document.querySelectorAll('.comment-input').forEach(input => {
                input.addEventListener('input', function() {
                    const postComment = this.nextElementSibling;
                    if (this.value.trim() !== '') {
                        postComment.classList.add('active');
                    } else {
                        postComment.classList.remove('active');
                    }
                });
                
                input.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        const postComment = this.nextElementSibling;
                        if (this.value.trim() !== '') {
                            postComment.click();
                        }
                    }
                });
            });
            
            document.querySelectorAll('.post-comment').forEach(button => {
                button.addEventListener('click', function() {
                    const commentInput = this.previousElementSibling;
                    if (commentInput.value.trim() !== '') {
                        showToast('Coment√°rio publicado ‚úì');
                        commentInput.value = '';
                        this.classList.remove('active');
                    }
                });
            });
            
            // Configurar bot√µes de seguir
            document.querySelectorAll('.follow-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const username = this.closest('.user-suggestion').querySelector('strong').textContent;
                    
                    if (this.classList.contains('following')) {
                        this.classList.remove('following');
                        this.textContent = 'Seguir';
                        followedUsers.delete(username);
                        showToast(`Deixou de seguir @${username}`);
                    } else {
                        this.classList.add('following');
                        this.textContent = 'Seguindo';
                        followedUsers.add(username);
                        showToast(`Agora voc√™ segue @${username}`);
                    }
                });
            });
            
            // Configurar categorias de busca
            document.querySelectorAll('.search-category').forEach(category => {
                category.addEventListener('click', function() {
                    document.querySelectorAll('.search-category').forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    showToast(`Buscando em: ${this.textContent}`);
                });
            });
            
            // Configurar op√ß√µes de cria√ß√£o
            document.querySelectorAll('.create-option').forEach(option => {
                option.addEventListener('click', function() {
                    const optionType = this.id.replace('create-', '');
                    showToast(`Criar ${optionType}`);
                });
            });
        });
        
        // Navega√ß√£o
        navIcons.forEach(icon => {
            icon.addEventListener('click', function() {
                const sectionId = this.getAttribute('data-section');
                if (sectionId && sectionId !== currentSection) {
                    switchSection(sectionId);
                }
            });
        });
        
        function switchSection(sectionId) {
            // Esconder se√ß√µes atuais
            sections.forEach(section => {
                section.classList.remove('active-section');
            });
            
            // Mostrar nova se√ß√£o
            document.getElementById(sectionId).classList.add('active-section');
            
            // Atualizar √≠cones
            navIcons.forEach(icon => {
                icon.classList.remove('active');
            });
            document.querySelector(`[data-section="${sectionId}"]`).classList.add('active');
            
            currentSection = sectionId;
        }
        
        // Tema
        themeToggle.addEventListener('click', function() {
            toggleTheme();
        });
        
        darkModeToggle.addEventListener('change', function() {
            toggleTheme();
        });
        
        function toggleTheme() {
            if (currentTheme === 'light') {
                setTheme('dark');
            } else {
                setTheme('light');
            }
        }
        
        function setTheme(theme) {
            body.setAttribute('data-theme', theme);
            currentTheme = theme;
            
            if (theme === 'dark') {
                themeToggle.classList.remove('fa-moon');
                themeToggle.classList.add('fa-sun');
                if (darkModeToggle) darkModeToggle.checked = true;
            } else {
                themeToggle.classList.remove('fa-sun');
                themeToggle.classList.add('fa-moon');
                if (darkModeToggle) darkModeToggle.checked = false;
            }
            
            localStorage.setItem('instagram-theme', theme);
        }
        
        // Intera√ß√µes de posts
        document.querySelectorAll('.action-icons .fa-heart').forEach(button => {
            button.addEventListener('click', function() {
                toggleLike(this);
            });
        });
        
        document.querySelectorAll('.fa-bookmark').forEach(button => {
            button.addEventListener('click', function() {
                toggleSave(this);
            });
        });
        
        function toggleLike(button) {
            const postCard = button.closest('.post-card');
            const postId = postCard.querySelector('.user-name').textContent;
            
            if (likedPosts.has(postId)) {
                button.classList.remove('fas');
                button.classList.add('far');
                button.style.color = '';
                likedPosts.delete(postId);
            } else {
                button.classList.remove('far');
                button.classList.add('fas');
                button.style.color = 'var(--like-color)';
                likedPosts.add(postId);
                showToast('Curtido ‚úì');
            }
        }
        
        function toggleSave(button) {
            const postCard = button.closest('.post-card');
            const postId = postCard.querySelector('.user-name').textContent;
            
            if (savedPosts.has(postId)) {
                button.classList.remove('fas');
                button.classList.add('far');
                button.style.color = '';
                savedPosts.delete(postId);
                showToast('Removido dos salvos');
            } else {
                button.classList.remove('far');
                button.classList.add('fas');
                button.style.color = 'var(--text-primary)';
                savedPosts.add(postId);
                showToast('Salvo ‚úì');
            }
        }
        
        function handleDoubleTap(image) {
            const heart = image.querySelector('.like-heart');
            const likeIcon = image.closest('.post-card').querySelector('.action-icons .fa-heart');
            const postId = image.closest('.post-card').querySelector('.user-name').textContent;
            
            if (!likedPosts.has(postId)) {
                likeIcon.classList.remove('far');
                likeIcon.classList.add('fas');
                likeIcon.style.color = 'var(--like-color)';
                heart.classList.add('animate');
                
                setTimeout(() => {
                    heart.classList.remove('animate');
                }, 800);
                
                likedPosts.add(postId);
                showToast('Curtido ‚úì');
            }
        }
        
        // Stories
        document.querySelectorAll('.story-item').forEach(item => {
            item.addEventListener('click', function() {
                const storyType = this.getAttribute('data-story');
                if (storyType === 'your-story') {
                    showToast('Criar novo story');
                } else {
                    const username = this.querySelector('.story-username').textContent;
                    showToast(`Story de @${username}`);
                    this.querySelector('.story-avatar').classList.add('seen');
                }
            });
        });
        
        // Highlights
        document.querySelectorAll('.highlight').forEach(highlight => {
            highlight.addEventListener('click', function() {
                const highlightName = this.querySelector('.highlight-name').textContent;
                if (highlightName === 'Novo') {
                    showToast('Criar novo destaque');
                } else {
                    showToast(`Abrindo ${highlightName}`);
                }
            });
        });
        
        // Perfil
        document.getElementById('profile-pic').addEventListener('click', function() {
            showToast('Seu perfil');
        });
        
        document.querySelectorAll('.stat').forEach(stat => {
            stat.addEventListener('click', function() {
                const statType = this.id;
                const value = this.querySelector('.stat-value').textContent;
                const label = this.querySelector('.stat-label').textContent;
                showToast(`${value} ${label.toLowerCase()}`);
            });
        });
        
        document.querySelectorAll('.profile-tab, .activity-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const parent = this.closest('.activity-tabs, .profile-tabs');
                if (parent) {
                    parent.querySelectorAll('.activity-tab, .profile-tab').forEach(t => {
                        t.classList.remove('active');
                    });
                }
                this.classList.add('active');
                
                if (this.classList.contains('profile-tab')) {
                    const tabName = this.querySelector('i').className.includes('table') ? 'Publica√ß√µes' : 
                                  this.querySelector('i').className.includes('id-badge') ? 'Marca√ß√µes' : 'Salvos';
                    showToast(tabName);
                }
            });
        });
        
        // Modais
        document.querySelectorAll('.post-options').forEach(option => {
            option.addEventListener('click', function() {
                postOptionsModal.style.display = 'flex';
            });
        });
        
        logo.addEventListener('click', function() {
            settingsModal.style.display = 'flex';
        });
        
        document.querySelectorAll('.modal-option.cancel').forEach(option => {
            option.addEventListener('click', function() {
                postOptionsModal.style.display = 'none';
                settingsModal.style.display = 'none';
            });
        });
        
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                postOptionsModal.style.display = 'none';
                settingsModal.style.display = 'none';
            }
        });
        
        // Atividade e Direct
        activityIcon.addEventListener('click', function() {
            switchSection('activity');
        });
        
        directIcon.addEventListener('click', function() {
            switchSection('direct');
        });
        
        // Conversas
        document.querySelectorAll('.conversation-item').forEach(item => {
            item.addEventListener('click', function() {
                const username = this.querySelector('.conversation-name').textContent;
                showToast(`Abrindo conversa com @${username}`);
            });
        });
        
        document.querySelector('.new-message').addEventListener('click', function() {
            showToast('Nova mensagem');
        });
        
        // Toast notification
        function showToast(message) {
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }
        
        // Simular outras intera√ß√µes
        document.getElementById('edit-profile').addEventListener('click', function() {
            showToast('Editar perfil');
        });
        
        document.getElementById('share-profile').addEventListener('click', function() {
            showToast('Compartilhar perfil');
        });
        
        document.querySelectorAll('.fa-comment').forEach(btn => {
            btn.addEventListener('click', function() {
                showToast('Comentar');
            });
        });
        
        document.querySelectorAll('.fa-paper-plane').forEach(btn => {
            btn.addEventListener('click', function() {
                showToast('Compartilhar publica√ß√£o');
            });
        });
    </script>
</body>
</html>
